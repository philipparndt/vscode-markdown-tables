{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "brace-style": ["error", "stroustrup"],
        "curly": ["error", "all"],
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "quotes": ["error", "double"],
        "semi": ["error", "never"],
        "no-unexpected-multiline": "error",
        "camelcase": "off",
        "@typescript-eslint/naming-convention": [
            "error",
            {
            "selector": "default",
            "format": ["camelCase"]
            },
        
            {
            "selector": "variable",
            "format": ["camelCase", "UPPER_CASE"]
            },
            {
            "selector": "parameter",
            "format": ["camelCase"],
            "leadingUnderscore": "allow"
            },
        
            {
            "selector": "memberLike",
            "modifiers": ["private"],
            "format": ["camelCase"],
            "leadingUnderscore": "require"
            },
        
            {
            "selector": "typeLike",
            "format": ["PascalCase"]
            }
        ]
    }
}
